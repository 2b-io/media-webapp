@import 'fonts/space-mono'

meyer-reset()
box-sizing-reset()

* {
  font-family: inherit
  font-size: 1rem
}

html, body
  font-size: 14px
  line-height: 1.5em
  height: 100%
  font-family: Space Mono, Consolas, monaco, monospace
  // font-family: inconsolata, monospace

body
  overflow-x: hidden
  overflow-y: auto
  position: relative
  -webkit-overflow-scrolling: touch

*
  -webkit-tap-highlight-color: rgba(0, 0, 0, 0)
  color: inherit

  &:visited
    color: inherit

.switch-wrapper
  position: relative

  & > div
    position: absolute
    width: 100%
