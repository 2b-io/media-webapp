{
  "name": "media-on-demand-webapp",
  "version": "1.0.0",
  "description": "A web app that allows tenants register and configure their media-on-demand presets.",
  "main": "index.js",
  "repository": "git@github.com:MediaSocialNetwork/media-on-demand-webapp.git",
  "author": "LongLH <d@dapps.me>",
  "license": "MIT",
  "devDependencies": {
    "babel-cli": "6.26.0",
    "concurrently": "3.5.0",
    "nodemon": "1.12.1",
    "webpack": "3.8.1"
  },
  "scripts": {
    "install:all": "yarn && yarn install:client && yarn install:server",
    "install:client": "cd client/ && yarn && cd ..",
    "install:server": "cd server/ && yarn && cd ..",
    "dev": "concurrently \"yarn dev:client:watch\" \"yarn dev:server:run\"",
    "dev:client:build": "cd client && webpack --config internals/webpack/webpack.dev.js && cd ..",
    "dev:client:watch": "cd client && nodemon internals/dev-server --watch internals/dev-server --exec babel-node --presets env,stage-2",
    "dev:server:run": "NODE_ENV=development nodemon server/index.js --watch server --exec babel-node --presets env,stage-2",
    "prod:build": "yarn prod:client:build && yarn prod:server:build",
    "prod:client:build": "cd client && webpack --config internals/webpack/webpack.prod.js && cd ..",
    "prod:server:build": "NODE_ENV=production babel server/index.js -o server/prod.js --presets env,stage-2",
    "prod:server:run": "NODE_ENV=production node server/prod.js",
    "client:clean": "rm -rf client/build",
    "server:clean": "rm server/prod.js"
  }
}
